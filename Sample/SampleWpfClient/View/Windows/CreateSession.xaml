<Window x:Class="SampleWpfClient.View.Windows.CreateSession"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:SampleWpfClient.ViewModel"
        Title="Create Session" Height="300" Width="300">

    <Window.DataContext>
        <local:CreateSessionViewModel />
    </Window.DataContext>
    
    <Grid>
        <StackPanel>
            <TextBlock Text="User name" />
            <TextBox Name="UserName"/>
            <TextBlock Text="Password" />
            <PasswordBox Name="Password" />
            <Button Content="OK" Click="Ok_OnClick" />
            <Button Content="Cancel" Click="Cancel_OnClick" />
        </StackPanel>
    </Grid>
</Window>
